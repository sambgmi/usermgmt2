{
    "info": {
        "name": "User Management API",
        "description": "Collection for testing User Management APIs",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "User Management",
            "item": [
                {
                    "name": "Register User",
                    "request": {
                        "method": "POST",
                        "url": "http://localhost:8081/api/auth/register",
                        "header": {
                            "Content-Type": "application/json"
                        },
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"name\": \"Test User\",\n    \"email\": \"test@example.com\",\n    \"password\": \"password123\"\n}"
                        }
                    }
                },
                {
                    "name": "Login",
                    "request": {
                        "method": "POST",
                        "url": "http://localhost:8081/api/auth/login",
                        "header": {
                            "Content-Type": "application/json"
                        },
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"email\": \"test@example.com\",\n    \"password\": \"password123\"\n}"
                        }
                    }
                },
                {
                    "name": "Get User Details",
                    "request": {
                        "method": "GET",
                        "url": "http://localhost:8081/api/users/me",
                        "header": {
                            "Authorization": "Bearer {{jwt_token}}"
                        }
                    }
                },
                {
                    "name": "Update User",
                    "request": {
                        "method": "PUT",
                        "url": "http://localhost:8081/api/users/me",
                        "header": {
                            "Content-Type": "application/json",
                            "Authorization": "Bearer {{jwt_token}}"
                        },
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"name\": \"Updated Name\",\n    \"email\": \"updated@example.com\"\n}"
                        }
                    }
                },
                {
                    "name": "Delete User",
                    "request": {
                        "method": "DELETE",
                        "url": "http://localhost:8081/api/users/me",
                        "header": {
                            "Authorization": "Bearer {{jwt_token}}"
                        }
                    }
                }
            ]
        },
        {
            "name": "Countries",
            "item": [
                {
                    "name": "Get All Countries",
                    "request": {
                        "method": "GET",
                        "url": "http://localhost:8081/api/countries"
                    }
                },
                {
                    "name": "Get Country by ID",
                    "request": {
                        "method": "GET",
                        "url": "http://localhost:8081/api/countries/1"
                    }
                },
                {
                    "name": "Create Country",
                    "request": {
                        "method": "POST",
                        "url": "http://localhost:8081/api/countries",
                        "header": {
                            "Content-Type": "application/json"
                        },
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"commonName\": \"Test Country\",\n    \"officialName\": \"Republic of Test\",\n    \"capital\": \"Test City\",\n    \"region\": \"Test Region\",\n    \"languages\": \"{\\\"eng\\\": \\\"English\\\"}\",\n    \"currencies\": \"{\\\"USD\\\": {\\\"name\\\": \\\"US Dollar\\\", \\\"symbol\\\": \\\"$\\\"}}\",\n    \"population\": 1000000,\n    \"flags\": \"https://example.com/flag.png\"\n}"
                        }
                    }
                },
                {
                    "name": "Update Country",
                    "request": {
                        "method": "PUT",
                        "url": "http://localhost:8081/api/countries/1",
                        "header": {
                            "Content-Type": "application/json"
                        },
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"commonName\": \"Updated Country\",\n    \"officialName\": \"Updated Republic\",\n    \"capital\": \"New City\",\n    \"region\": \"New Region\",\n    \"languages\": \"{\\\"eng\\\": \\\"English\\\"}\",\n    \"currencies\": \"{\\\"EUR\\\": {\\\"name\\\": \\\"Euro\\\", \\\"symbol\\\": \\\"â‚¬\\\"}}\",\n    \"population\": 2000000,\n    \"flags\": \"https://example.com/updated-flag.png\"\n}"
                        }
                    }
                },
                {
                    "name": "Delete Country",
                    "request": {
                        "method": "DELETE",
                        "url": "http://localhost:8081/api/countries/1"
                    }
                },
                {
                    "name": "Sync Countries",
                    "request": {
                        "method": "POST",
                        "url": "http://localhost:8081/api/countries/sync"
                    }
                }
            ]
        }
    ]
}